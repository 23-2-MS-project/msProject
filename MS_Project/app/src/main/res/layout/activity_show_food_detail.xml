<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowFoodDetail">

    <ImageView
        android:id="@+id/backgroundImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/other_page"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonDate"
        android:layout_width="371dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="#2E313D"
        android:text=""
        android:textColor="#F5F7FF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/ShowImage"
        android:layout_width="284dp"
        android:layout_height="295dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/backgroundImageView"
        app:layout_constraintTop_toTopOf="@+id/backgroundImageView"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/eatTime"
        android:layout_width="96dp"
        android:layout_height="47dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="식사 시간"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/MainMenu"
        app:layout_constraintEnd_toStartOf="@+id/InfoTime" />

    <TextView
        android:id="@+id/MainMenu"
        android:layout_width="96dp"
        android:layout_height="47dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="메인 메뉴"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/EatCost"
        app:layout_constraintEnd_toStartOf="@+id/InfoMain" />

    <TextView
        android:id="@+id/EatCost"
        android:layout_width="96dp"
        android:layout_height="47dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="식사 비용"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/TextCalorie"
        app:layout_constraintEnd_toStartOf="@+id/InfoCost" />

    <TextView
        android:id="@+id/TextCalorie"
        android:layout_width="96dp"
        android:layout_height="47dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="섭취 열량"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/view2"
        app:layout_constraintEnd_toStartOf="@+id/InfoCalorie" />

    <TextView
        android:id="@+id/InfoTime"
        android:layout_width="182dp"
        android:layout_height="47dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/InfoMain"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/InfoMain"
        android:layout_width="182dp"
        android:layout_height="47dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/InfoCost"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/InfoCost"
        android:layout_width="182dp"
        android:layout_height="47dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/InfoCalorie"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/InfoCalorie"
        android:layout_width="182dp"
        android:layout_height="47dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="2px"
        android:layout_marginBottom="400dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundImageView"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <View
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="2px"
        android:layout_marginBottom="100dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundImageView"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>